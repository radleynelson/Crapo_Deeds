@model CrapoDeeds.Models.Case

@{
    ViewBag.Title = "AddCase";
}

<h2>AddCase</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Case</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "help is-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.caseDescription, htmlAttributes: new { @class = "label" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.caseDescription, new { htmlAttributes = new { @class = "control" } })
            @Html.ValidationMessageFor(model => model.caseDescription, "", new { @class = "help is-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.client.clientName, htmlAttributes: new { @class = "label" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.client.clientName, new { htmlAttributes = new { @class = "control" } })
            @Html.ValidationMessageFor(model => model.client.clientName, "", new { @class = "help is-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="button is-link" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Cases")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
