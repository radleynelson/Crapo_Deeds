                    @Html.EditorFor(model => model.Case, new { htmlAttributes = new { @class = "control" } })
                    @Html.ValidationMessageFor(model => model.Case, "", new { @class = "help is-danger" })
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add Task" class="button is-link" />
                </div>
            </div>
            <br />
        </div>
    }

<div>
    @Html.ActionLink("Back to List", "ViewTasks")
</div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
