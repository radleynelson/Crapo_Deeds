@model CrapoDeeds.Models.ClientLeads

@{
    ViewBag.Title = "Index";
}

<br />

<div style="min-width: 300px; margin: auto; max-width: 500px" class="box">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Request Legal Help</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "help is-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.clientLeadName, htmlAttributes: new { @class = "label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.clientLeadName, new { htmlAttributes = new { @class = "control" } })
                    @Html.ValidationMessageFor(model => model.clientLeadName, "", new { @class = "help is-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.clientLeadEmail, htmlAttributes: new { @class = "label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.clientLeadEmail, new { htmlAttributes = new { @class = "control" } })
                    @Html.ValidationMessageFor(model => model.clientLeadEmail, "", new { @class = "help is-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.clientLeadPhoneNumber, htmlAttributes: new { @class = "label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.clientLeadPhoneNumber, new { htmlAttributes = new { @class = "control" } })
                    @Html.ValidationMessageFor(model => model.clientLeadPhoneNumber, "", new { @class = "help is-danger" })
                </div>
            </div>
            <br />
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="button is-link" />
                </div>
            </div>
        </div>
    }
    
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
