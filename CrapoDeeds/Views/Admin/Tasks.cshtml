                    @Html.EditorFor(model => model.dueDate, new { htmlAttributes = new { @class = "control" } })
                    @Html.ValidationMessageFor(model => model.dueDate, "", new { @class = "help is-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Case, htmlAttributes: new { @class = "label" })
